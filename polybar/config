yellow  = #f0c674
green   = #b5bd68
cyan    = #8abeb7
blue    = #81a2be
magenta = #b294bb
white   = #acacac


[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
width    = 100%
height   = 23
offset-x = 0
offset-y = 0

